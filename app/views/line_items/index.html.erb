<h1>Listing line_items</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @line_items.each do |line_item| %>
      <tr>
        <td><%= link_to 'Show', line_item_path(line_item) %></td>
        <!--<td><%= link_to 'Edit', edit_line_item_path(line_item) %></td>-->
        <td><%= link_to "Remove the" + " #{line_item.item.title} " + "from cart", line_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= button_to 'Add one more of this item.', line_items_path(item_id: line_item.item_id) %> </td>
        <td><%= link_to 'Empty your cart', cart_path(@cart), method: :delete, data: { confirm: 'Are you sure?' } %></td>    
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if logged_in? && cart_items %>
  <%= link_to "Check out.", new_order_path %> 
<% end %>