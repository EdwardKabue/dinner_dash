<h1>Log In</h1>
<%= form_for :session, url:sessions_path do |f| %>

	<p>
		<%= f.label :email %><br/>
		<%= f.text_field :email %>
	</p>
	<p>
		<%= f.label :password %><br/>
		<%= f.password_field :password %>
	</p>
	<p>
		<%= f.submit "log in" %>
	</p>
<%end%>

<p><%=link_to "Forgot your password?", reset_password_path%></p>