<% if @orders %>

	<% if !@ordered_orders.empty? %>
		
			<h2>Ordered</h2>
			<table id = "ordered">
				<thead>
					<tr>
						<th></th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @ordered_orders.each do |ordered_order| %>
						<tr>
							<td>
								<%= link_to "Made #{time_ago_in_words(ordered_order.created_at)} ago.", mark_order_as_completed_path(ordered_order)%>
							</td>
							<td>
								<%= link_to "Cancel it.", cancel_order_path(ordered_order) %>
								<i>or</i> 
								<%= link_to "Mark it as paid.", mark_order_as_paid_path(ordered_order) %>
								
							</td>
						</tr>
					<% end %>	
				</tbody>
			</table>	
		
	<% end %>

	<% if !@paid_orders.empty? %>
		
			<h2>Paid</h2>
			<table id = "paid">
				<thead>
					<tr>
						<th></th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @paid_orders.each do |paid_order| %>
						<tr>
							<td>
								<%= link_to "Made #{time_ago_in_words(paid_order.created_at)} ago.", admin_dash_board_path(paid_order) %>
							</td>
							<td>
								<%= link_to "Mark this order as completed.", mark_order_as_completed_path(paid_order) %>
							 	<i>or</i> 
							 	<%= link_to "Cancel it.", cancel_order_path(paid_order) %>
							</td>
						</tr>
					<% end %>	
				</tbody>
			</table>	
		
	<% end %>

	<% if !@completed_orders.empty? %>
		
			<h2>Completed</h2>
			<table id = "completed">
				<thead>
					<tr>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @completed_orders.each do |completed_order| %>
						<tr>
							<td>
								<%= link_to "Made #{time_ago_in_words(completed_order.created_at)} ago.", admin_dash_board_path(completed_order) %>
							</td>
						</tr>
					<% end %>	
				</tbody>
			</table>	
		
	<% end %>

	<% if !@cancelled_orders.empty? %>
		
			<h2>Cancelled</h2>
			<table id = "cancelled">
				<thead>
					<tr>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @cancelled_orders.each do |cancelled_order| %>
						<tr>
							<td>
								<%= link_to "Made #{time_ago_in_words(cancelled_order.created_at)} ago.", admin_dash_board_path(cancelled_order) %>
							</td>
						</tr>
					<% end %>	
				</tbody>
			</table>	
		
	<% end %>	

<% end %>