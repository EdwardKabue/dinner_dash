<table>
	<thead>
		<th></th>
	</thead>
	<tbody>
	<% @items.each do |item| %>
		<tr>
			<td> <%= link_to "#{item.title}", item_path(item) %> </td>
			<% if is_user_admin? %>
				<td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			<% end %>
		</tr>
	<% end %>
	</tbody>
</table>

	
