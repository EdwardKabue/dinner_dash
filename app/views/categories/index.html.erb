<% if @categories %>
  <h1>Listing categories</h1>

  <table>
    <thead>
      <tr>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td class = "non-admin"><%= link_to category.title, category %></td>
          <% if is_user_admin? %>
            <td class = "admin"><%= link_to 'Edit', edit_category_path(category) %></td>
            <td class = "admin"><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<br>
<% if is_user_admin? %>
  <%= link_to 'New Category', new_category_path %>
<% end %>
