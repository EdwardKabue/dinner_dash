<% if flash[:notice] %>
	<div class="notice"><%= flash[:notice] %></div>
<% end %>
<table>
	<th></th>
	<th></th>
	<tbody>
		<tr>
			<td><%= image_tag @item.photo.url(:medium) %></td>
			<td>
				<h2><%= @item.title %></h2>
				<p><%= @item.description %></p>
				<p>Price: <%= @item.price %></p>
			</td>
		</tr>
		<tr>
			<td>
				<% if !@item.retired %>
					<%= button_to "Add to cart", {controller: 'line_items', action: 'create'}, params: {item_id: @item.id} %>
				<% end %>
			</td>
			<td>
				<% if is_user_admin? && !@item.retired %>
					<%= button_to "Retire this item.", {controller: 'items', action: 'retire'}, params: {item_id: @item.id} %> 
				<% end %>
			</td>	
		</tr>
	</tbody>
</table>

<% if is_user_admin? %>
	<%= form_for :item, url: remove_from_category_item_path do |f| %>
	<p><%= f.label :category_ids, "Categories" %><br/></p>
  	<%= f.collection_select :category_ids, Category.all, :id, :title, {}, {multiple: true} %>
	<% end %>
<% end %>

<% if is_user_admin? && !@item.retired %>
	<%= link_to 'Edit', edit_item_path(@item) %> |
<% end %>	
<%= link_to 'Back', items_path %>
